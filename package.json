{
  "name": "radson",
  "version": "2.0.17",
  "description": "A set of useful functions to make interacting with Sonarr and Radarr a joy.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build": "rm -rf ./dist && tsc",
    "watch": "tsc --watch",
    "build-docs": "npx typedoc --options typedoc.json",
    "docs": "npx typedoc --options typedoc.json && npx http-server ./docs",
    "dev": "tsc --noEmit --watch"
  },
  "keywords": ["sonarr-api", "radarr-api", "typescript", "api"],
  "author": "NeoSahadeo",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "add": "^2.0.6",
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typedoc-theme-oxide": "^0.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/axios": "^0.14.4",
    "axios": "^1.11.0"
  }
}
